<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"     android:background="@drawable/popup_bk"    >    <TextView        android:id="@+id/d_content"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_margin="10dp"        android:textColor="@color/black"        android:textSize="16sp" />    <Button       android:paddingTop="15dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:textSize="20sp"        android:layout_alignParentBottom="true"        android:textColor="@color/whilt"        android:background="@drawable/popup_ok"        android:gravity="center"        android:textStyle="bold"        android:id="@+id/d_button"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_gravity="bottom|center_horizontal"        android:text="我知道了"         /> </RelativeLayout>