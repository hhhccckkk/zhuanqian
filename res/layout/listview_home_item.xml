<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="horizontal"     android:id="@+id/home_list_lin_bg"     >    <LinearLayout              android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:gravity="center_vertical"        android:orientation="horizontal" >        <Button             android:visibility="invisible"            android:layout_width="0dp"            android:layout_weight="2"            android:layout_height="50dp"            android:layout_gravity="center_vertical"            android:layout_marginBottom="5dp"            android:layout_marginLeft="10dp"            android:layout_marginRight="5dp"            android:layout_marginTop="5dp" />        <LinearLayout                         android:layout_weight="6"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:gravity="center_vertical"            android:orientation="vertical" >            <TextView                android:id="@+id/kind_name"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:layout_marginTop="2dp"                android:gravity="center_vertical"                android:textColor="#000000"                android:textSize="18sp"                android:textStyle="bold" />                       <TextView                android:paddingRight="5dp"                android:id="@id/home_list_item_content"                android:layout_width="fill_parent"                android:layout_height="wrap_content"                android:layout_marginLeft="5dp"                android:textColor="#000000"                android:textSize="14sp"                android:textStyle="bold" />        </LinearLayout>        <Button             android:visibility="invisible"            android:layout_width="0dp"            android:layout_height="fill_parent"            android:layout_weight="1"            />    </LinearLayout></LinearLayout>