<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    
    >
    
<ImageView 
    android:layout_height="60dp"
    android:layout_width="60dp"
    android:layout_margin="3dp"
    android:id="@+id/list_app_img"
    android:scaleType="fitXY"
    android:src="@drawable/icon"
    />
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    
    >
    <TextView 
        android:textStyle="bold"
        android:textColor="#404040"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_app_name"
        />
    <TextView 
        android:layout_marginTop="3dp"
         style="@style/app_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_app_desc"
        android:layout_below="@+id/list_app_name"
        />
     <TextView 
         android:paddingRight="3dp"
         android:textColor="#CD2626"
         android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_app_price"
       android:layout_alignParentRight="true"
        />
     <Button 
        android:layout_marginTop="10dp"
         android:id="@+id/qiandao"
         android:layout_width="wrap_content"
         android:layout_height="25dp"
         android:background="@drawable/iround2"
         android:text="签到"
         android:textSize="14sp"
         android:textColor="@color/whilt"
         android:layout_below="@+id/list_app_price"
         />
</RelativeLayout>
</LinearLayout>
