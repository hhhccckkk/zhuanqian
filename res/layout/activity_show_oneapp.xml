<?xml version="1.0" encoding="utf-8"?><RelativeLayout     android:layout_width="fill_parent"    android:layout_height="fill_parent"    xmlns:android="http://schemas.android.com/apk/res/android"><LinearLayout     android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/whilt"    android:orientation="vertical" >    <include        android:layout_width="fill_parent"        android:layout_height="50dp"        layout="@layout/activity_title" />    <FrameLayout        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:orientation="horizontal" >        <ImageView            android:id="@+id/one_app_img"            android:layout_width="50dp"            android:layout_height="fill_parent"            android:layout_gravity="left"            android:layout_margin="8dp"            android:scaleType="fitXY" />        <TextView            android:id="@+id/one_app_name"            android:layout_width="wrap_content"            android:layout_height="50dp"            android:layout_gravity="center"            android:gravity="center"            android:textColor="@color/black"            android:textSize="20sp" />    </FrameLayout>    <TextView         android:layout_marginLeft="10dp"        android:layout_marginRight="10dp"        android:background="@drawable/jok_bg_shap"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:padding="5dp"        android:textSize="12sp"        android:textColor="#ff0000"        android:text="签到可以获取大量金币。下载试玩获取金币后，请不要        卸载，24小时候后，在签到页面可以签到,获取相应奖励."        />    <LinearLayout        android:layout_margin="10dp"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_marginTop="5dp"        android:orientation="vertical"        android:background="@drawable/jok_bg_shap" >        <TextView             android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:text="完成步骤："            android:textSize="16sp"            android:textColor="#ff00"            />        <LinearLayout             android:layout_width="fill_parent"            android:layout_height="40dp"            android:orientation="horizontal"            >        <TextView            android:paddingLeft="10dp"            android:gravity="center_vertical"            android:id="@+id/one_app_tx1"            android:layout_width="wrap_content"            android:layout_height="fill_parent"            android:textColor="#ff0000"            android:textSize="20sp" />        <TextView            android:layout_marginLeft="5dp"            android:gravity="center_vertical"            android:id="@+id/one_app_tx2"            android:layout_width="fill_parent"            android:layout_height="fill_parent"           android:textColor="@color/black" />        </LinearLayout>         <LinearLayout             android:layout_width="fill_parent"            android:layout_height="40dp"            android:orientation="horizontal"            >        <TextView            android:paddingLeft="10dp"            android:gravity="center_vertical"            android:id="@+id/one_app_tx3"            android:layout_width="wrap_content"            android:layout_height="fill_parent"            android:textColor="#FF0000"            android:textSize="20sp" />        <TextView             android:layout_marginLeft="5dp"            android:gravity="center_vertical"            android:layout_height="fill_parent"            android:id="@+id/one_app_tx4"            android:layout_width="fill_parent"           android:textColor="@color/black" />        </LinearLayout>   </LinearLayout><ScrollView     android:layout_width="fill_parent"    android:layout_height="wrap_content"    >        <LinearLayout             android:layout_width="fill_parent"            android:layout_height="wrap_content"            android:orientation="vertical"            >    <TextView        android:id="@+id/oneapp_content"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:padding="8dp"        android:text="生生世世"        android:textColor="@color/black"        android:textSize="14sp" />    <ImageView        android:id="@+id/oneapp_image2"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_margin="5dp"        android:scaleType="fitXY" />    </LinearLayout></ScrollView></LinearLayout><LinearLayout     android:layout_width="fill_parent"    android:layout_height="wrap_content"    android:orientation="vertical"     android:layout_alignParentBottom="true"     android:gravity="center"    ><Button    android:layout_marginBottom="5dp"   android:layout_gravity="center"            android:id="@+id/down"            android:layout_width="190dp"            android:layout_height="30dp"            android:layout_marginRight="5dp"            android:background="#80ff0000"            android:text="下 载"            android:textColor="@color/whilt" /></LinearLayout></RelativeLayout>