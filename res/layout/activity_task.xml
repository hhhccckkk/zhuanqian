<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilt"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        layout="@layout/activity_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp" >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >  
  
        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_marginTop="10dp"
            android:background="@drawable/more_shape"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/xinshou_wanshanziliao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logo_per_info" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/im1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/xinshou_wanshangziliao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="完善资料"
                        android:textColor="#999999"
                      android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="完善个人资料可以获取金币150"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dip"
                    android:padding="0dip"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/line"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/xinshou_yaoqing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/more_selector"
                android:layout_margin="2dp"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/yaoqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/own_logo_invite" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/yaoqing"
                    android:orientation="vertical" >

                    <TextView
                         android:id="@+id/xinshou_yaoqingqq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请好友"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邀请3位好友奖励金币150"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dip"
                    android:padding="0dip"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>
             <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/line"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/xinshou_qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/more_selector"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logo_new_task_qzone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/im2"
                    android:orientation="vertical" >

                    <TextView
                         android:id="@+id/xinshou_shareqq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享到QQ空间"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享到qq空间奖励金币150"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dip"
                    android:padding="0dip"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/line"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/xinshou_xinlang"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/more_select_top"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logo_new_task_weibo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/im3"
                    android:orientation="vertical" >

                    <TextView
                          android:id="@+id/xinshou_sharexinlang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享到新浪微博"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享到新浪微博奖励金币150"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dip"
                    android:padding="0dip"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/line"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/xinshou_xiazai1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/more_select_top"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/im4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logo_new_task_insapp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/im4"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载第一个应用"
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载应用获取金币200+"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dip"
                    android:padding="0dip"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/line"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/xinshou_xiazai2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/more_select_top"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/im5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logo_dianle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_toRightOf="@+id/im5"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载第2个应用"
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载第2个应用获取金币200+"
                        android:textColor="#ff0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dip"
                    android:padding="0dip"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/line"
                android:textStyle="bold" />

            

           
        </LinearLayout>
        <Button 
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="45dp"
            android:background="@drawable/more_shape"
            android:text="返回开始赚钱"
            android:textColor="#ff0000"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:onClick="back"
            />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
